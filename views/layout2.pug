doctype html
html
  head
    title Business Process
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Business Processes
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user
              if user.isAdmin
                li
                  a(href='/articles/add') Add Question
                li
                  a(href='/articles/view') View Questions
                li
                  a(href='/assessment/general') Assessment
                li
                  a(href='/assessment') Abhi ke liye hai
                li
                  a(href='/assessment/results/users') All Data 
              else
                li
                  a(href='/assessment/general') Assessment
                li
                  a(href='/assessment') Abhi ke liye hai
                li
                  a(href='/assessment/results') Results
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/') Hi #{user.name}
              li 
                a(href='/users/logout') Logout
            else
              li
                a(href='/users/register') Register
              li
                a(href='/users/login') Login
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; Wipro | Business Process Team
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
